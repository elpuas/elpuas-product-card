{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --watch",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "elpuas-product-card",
  "author": "Alfredo Navas",
  "module": "dist/elpuas-product-card.esm.js",
  "size-limit": [
    {
      "path": "dist/elpuas-product-card.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/elpuas-product-card.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@rollup/plugin-image": "^2.1.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.5",
    "babel-jest": "^28.1.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-test-renderer": "^18.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@types/react-test-renderer": "^18.0.0",
    "postcss": "8.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elpuas/elpuas-product-card.git"
  },
  "homepage": "https://elpuas.com",
  "keywords": [
    "product",
    "card",
    "product-card",
    "product-card-component",
    "product-card-react",
    "ElPuas Digital Crafts",
    "typescript"
  ],
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
